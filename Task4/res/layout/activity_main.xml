<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">


    <fragment
        android:layout_width="match_parent"
        android:layout_height="125dp"
        class="org.oyvang.gallery.fragment_files"
        android:id="@+id/fragment_list_file"
        android:layout_weight="0.27"
        tools:layout="@layout/fragment_files"/>


    <fragment
        android:layout_width="match_parent"
        android:layout_height="250dp"
        class="org.oyvang.gallery.fragment_gallery"
        android:id="@+id/fragment_gallery_view"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.56"
        tools:layout="@layout/fragment_gallery"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="org.oyvang.gallery.fragment_text"
        android:id="@+id/fragment_text_view"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.17"
        tools:layout="@layout/fragment_text"/>

</LinearLayout>